{
  "name": "claude-code-buddy",
  "version": "2.3.1",
  "description": "Your friendly AI companion for Claude Code - smart routing, prompt enhancement, and project memory",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "claude-code-buddy": "dist/mcp/server.js"
  },
  "files": [
    "dist/",
    "plugin.json",
    "README.md",
    "README.zh-TW.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:plugin": "npm run build && npm run prepare:plugin",
    "prepare:plugin": "node scripts/prepare-plugin.js",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "echo '⚠️  WARNING: Use test:e2e:safe instead to prevent system freeze!' && exit 1",
    "test:e2e:safe": "./scripts/e2e-resource-monitor.sh vitest run --config vitest.e2e.config.ts",
    "test:integration": "./scripts/e2e-resource-monitor.sh vitest run --config vitest.config.ts tests/**/*.test.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "cred": "tsx src/cli/index.ts cred",
    "orchestrator": "tsx src/orchestrator/index.ts",
    "dashboard": "tsx src/dashboard/server.ts",
    "demo:architecture": "tsx src/agents/architecture/demo.ts",
    "demo:dashboard": "tsx examples/dashboard-demo.ts",
    "mcp": "node dist/mcp/server.js",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch"
  },
  "keywords": [
    "claude",
    "claude-code",
    "mcp",
    "ai-assistant",
    "code-buddy",
    "prompt-enhancement",
    "smart-routing"
  ],
  "author": "PCIRCLE-AI",
  "license": "AGPL-3.0",
  "homepage": "https://github.com/PCIRCLE-AI/claude-code-buddy",
  "repository": {
    "type": "git",
    "url": "https://github.com/PCIRCLE-AI/claude-code-buddy.git"
  },
  "bugs": {
    "url": "https://github.com/PCIRCLE-AI/claude-code-buddy/issues"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@types/form-data": "^2.2.1",
    "@types/fs-extra": "^11.0.4",
    "@types/multer": "^2.0.0",
    "asciichart": "^1.5.25",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.6.2",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cli-spinners": "^3.4.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "form-data": "^4.0.5",
    "fs-extra": "^11.3.3",
    "glob": "^13.0.0",
    "ink": "^6.6.0",
    "ink-spinner": "^5.0.0",
    "log-update": "^7.0.2",
    "minimatch": "^10.1.1",
    "multer": "^2.0.2",
    "ora": "^9.0.0",
    "sqlite": "^5.1.1",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/asciichart": "^1.5.8",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "prettier": "^3.8.0",
    "tsx": "^4.19.2",
    "typedoc": "^0.28.16",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "overrides": {
    "hono": "4.11.7"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}

{
  "name": "claude-code-buddy",
  "version": "2.0.0",
  "description": "Your friendly AI companion for Claude Code - smart routing, prompt enhancement, and project memory",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "echo '⚠️  WARNING: Use test:e2e:safe instead to prevent system freeze!' && exit 1",
    "test:e2e:safe": "./scripts/e2e-resource-monitor.sh vitest run --config vitest.e2e.config.ts",
    "test:integration": "./scripts/e2e-resource-monitor.sh vitest run --config vitest.config.ts tests/**/*.test.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "cred": "tsx src/cli/index.ts cred",
    "orchestrator": "tsx src/orchestrator/index.ts",
    "rag": "tsx src/agents/rag/index.ts",
    "rag:demo": "tsx src/agents/rag/demo.ts",
    "rag:watch": "tsx src/agents/rag/watch.ts",
    "rag:index": "echo 'RAG indexing not yet implemented'",
    "dashboard": "tsx src/dashboard/server.ts",
    "demo:architecture": "tsx src/agents/architecture/demo.ts",
    "demo:dashboard": "tsx examples/dashboard-demo.ts",
    "mcp": "node dist/mcp/server.js"
  },
  "keywords": [
    "claude",
    "claude-code",
    "mcp",
    "ai-assistant",
    "code-buddy",
    "prompt-enhancement",
    "smart-routing"
  ],
  "author": "Your Name",
  "license": "AGPL-3.0",
  "homepage": "https://github.com/yourusername/claude-code-buddy",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/claude-code-buddy.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/claude-code-buddy/issues"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.1",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@types/form-data": "^2.2.1",
    "@types/fs-extra": "^11.0.4",
    "@types/multer": "^2.0.0",
    "asciichart": "^1.5.25",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.5.0",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "chromadb": "^1.9.2",
    "cli-spinners": "^3.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.2.1",
    "form-data": "^4.0.5",
    "fs-extra": "^11.3.3",
    "ink": "^6.6.0",
    "ink-spinner": "^5.0.0",
    "log-update": "^7.0.2",
    "multer": "^2.0.2",
    "openai": "^4.70.4",
    "ora": "^9.0.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0",
    "vectra": "^0.11.1",
    "winston": "^3.19.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/asciichart": "^1.5.8",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.7",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

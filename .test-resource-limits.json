{
  "resourceLimits": {
    "maxConcurrentTests": 1,
    "maxMemoryMB": 2048,
    "maxCPUPercent": 70,
    "testTimeout": 30000,
    "serverStartupTimeout": 10000
  },
  "monitoring": {
    "checkInterval": 5000,
    "autoKillOnExceed": true,
    "logResourceUsage": true
  },
  "prevention": {
    "killTestsOnFreeze": true,
    "maxRetries": 0,
    "gracefulShutdown": true
  }
}
